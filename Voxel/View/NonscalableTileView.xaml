<Window
  x:Name="window"
  x:Class="Voxel.View.NonscalableTileView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:Voxel.View"
  mc:Ignorable="d"
  Title="{Binding WindowTitle}"
  Height="300"
  Width="500"
  WindowStartupLocation="CenterOwner"
  MinWidth="500"
  MinHeight="300">
  <Grid
    x:Name="gridMain"
    Background="#FF323232">
    <Grid.ColumnDefinitions>
      <ColumnDefinition
        Width="2*" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition
        Height="5*" />
      <RowDefinition
        Height="1*" />
    </Grid.RowDefinitions>
    <Grid
      x:Name="gridBottom"
      Grid.ColumnSpan="2"
      Margin="0"
      Grid.Row="1"
      VerticalAlignment="Stretch"
      Background="{StaticResource HighlightColor}">
      <Grid.Effect>
        <DropShadowEffect
          BlurRadius="20"
          ShadowDepth="0"
          Opacity="0.5" />
      </Grid.Effect>
      <Grid.ColumnDefinitions>
        <ColumnDefinition
          Width="1*" />
        <ColumnDefinition
          Width="1*" />
        <ColumnDefinition
          Width="1*" />
        <ColumnDefinition
          Width="1*" />
      </Grid.ColumnDefinitions>
      <Button
        x:Name="buttonExport"
        Content="Button"
        Grid.Column="3"
        Style="{StaticResource ToolButton}" />
      <Button
        x:Name="buttonImport"
        Content="Button"
        Grid.Column="2"
        Style="{StaticResource ToolButton}" />
      <Button
        x:Name="buttonPin"
        Content="Button"
        Grid.Column="1"
        Style="{StaticResource ToolButton}" />
      <Button
        x:Name="buttonGenrate"
        Content="Button"
        Style="{StaticResource ToolButton}" />

    </Grid>
    <Grid
      x:Name="gridPreview"
      Grid.Column="1"
      Margin="0"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Width="124"
      Height="124"
      Background="{Binding BackColor}">
      <Image
        x:Name="imageBackground"
        RenderTransformOrigin="0.5,0.5" />
      <Border
        HorizontalAlignment="Center"
        Height="40"
        VerticalAlignment="Center"
        Width="40">
        <Image
          Stretch="Uniform"
          x:Name="imageIcon"
          Source="{Binding Icon}"
          RenderTransformOrigin="0.5,0.5" />

      </Border>
      <TextBlock
        HorizontalAlignment="Left"
        TextWrapping="Wrap"
        Text="{Binding TargetName}"
        VerticalAlignment="Bottom"
        Foreground="White"
        Margin="8,0,40,5"
        FontFamily="Segoe UI" />

    </Grid>
    <Grid
      x:Name="gridOptions"
      Margin="0" >
      <Grid.RowDefinitions>
        <RowDefinition
          Height="1*" />
        <RowDefinition
          Height="1*" />
        <RowDefinition
          Height="1*" />
        <RowDefinition
          Height="1*" />
        <RowDefinition
          Height="1*" />
      </Grid.RowDefinitions>
      <Button
        Style="{StaticResource OptionButton}"
        x:Name="buttonTarget"
        Content="{Binding ButtonTarget}"
        Grid.Row="0"
        Command="{Binding SelectFileCommand}"
        ToolTip="{Binding ButtonTargetTip}">
        <Button.InputBindings>
          <MouseBinding
            Gesture="RightClick"
            Command="{Binding SelectFolderCommand}" />
        </Button.InputBindings>
      </Button>
      <Button
        Style="{StaticResource OptionButton}"
        x:Name="buttonBackColor"
        Content="{Binding ButtonBackColor}"
        Grid.Row="2" />
    </Grid>

  </Grid>
</Window>