<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Voxel.Controls"
  xmlns:model="clr-namespace:Voxel.Model">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary
      Source="TileRadioButton.xaml" />
  </ResourceDictionary.MergedDictionaries>
  
  <Style
    TargetType="{x:Type local:ImageSpliter}">


    <Setter
      Property="Template">
      <Setter.Value>
        <ControlTemplate
          TargetType="{x:Type local:ImageSpliter}">

          <Grid
            Background="Transparent"
            x:Name="gridMain">

            <Grid
              Background="Transparent"
              x:Name="gridSplitView"
              Visibility="Collapsed">
              <Grid.ColumnDefinitions>
                <ColumnDefinition
                  Width="1*" />
                <ColumnDefinition
                  Width="4" />
                <ColumnDefinition
                  Width="1*" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition
                  Height="1*" />
                <RowDefinition
                  Height="4" />
                <RowDefinition
                  Height="1*" />
              </Grid.RowDefinitions>

              <RadioButton
                Style="{StaticResource TileRadioButton}"
                x:Name="topLeft">
                <Image
                  Source="{TemplateBinding TopLeft}" />
              </RadioButton>

              <RadioButton
                Style="{StaticResource TileRadioButton}"
                x:Name="topRight"
                Grid.Column="2">
                <Image
                  Source="{TemplateBinding TopRight}" />
              </RadioButton>
              

            </Grid>

            <RadioButton
              x:Name="fullImage"
              Style="{StaticResource TileRadioButton}">
              <Image
                Source="{TemplateBinding BitmapSource}" />
            </RadioButton>

          </Grid>
          <ControlTemplate.Triggers>
            <Trigger
              Property="IsSplit"
              Value="true">
              <Setter
                Property="Visibility"
                TargetName="fullImage"
                Value="Collapsed" />
              <Setter
                Property="Visibility"
                TargetName="gridSplitView"
                Value="Visible" />
            </Trigger>
          </ControlTemplate.Triggers>
          
          
        </ControlTemplate>
      </Setter.Value>
    </Setter>

    
  </Style>
</ResourceDictionary>
