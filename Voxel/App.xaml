<Application
  x:Class="Voxel.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:Voxel"
  >
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
          Source="Styles/ToolButton.xaml" />
        <ResourceDictionary
          Source="Styles/OptionButton.xaml" />
        <ResourceDictionary
          Source="Styles/DarkTextBox.xaml" />
        <ResourceDictionary
          Source="Styles/OptionCheckBox.xaml" />
        <ResourceDictionary
          Source="Styles/DarkButton.xaml" />
        <ResourceDictionary
          Source="Styles/TileSizeToggle.xaml" />
        <ResourceDictionary
          Source="Styles/OptionRadioButton.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <SolidColorBrush
        x:Key="HighlightColor"
        Color="#46829D" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
